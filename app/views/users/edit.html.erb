<h1 class="title">Editing User</h1>
<%= form_with(model: @user, local: true) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :postcode %>
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :introduction %>
    <%= f.text_area :introduction %>
  </div>

  <div class="field">
    <%= f.label :icon_image %>
    <%= f.file_field :icon_image %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
