<p>
  <strong>Following:</strong>
  <%= link_to user.followings.size, following_user_path(@user) %>
  <strong>Followers:</strong>
  <%= link_to user.followers.size, follower_user_path(@user) %>
</p>

<% if user_signed_in? %>
  <% if current_user.following?(user) %>
    <%= render 'users/shared/unfollow_btn', user: @user %>
  <% elsif current_user != user %>
    <%= render 'users/shared/follow_btn', user: @user %>
  <% end %>
<% end %>
