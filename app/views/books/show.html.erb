<article class="message is-large">
  <div class="message-header">
    <p>
      <strong><%= Book.human_attribute_name(:title) %></strong>
      <%= @book.title %>
    </p>
  </div>
  <div class="message-body">
    <p class="content">
      <strong><%= Book.human_attribute_name(:memo) %></strong>
      <%= @book.memo %>
    </p>

    <p class="content">
      <strong><%= Book.human_attribute_name(:author) %></strong>
      <%= @book.author %>
    </p>

    <p class="content">
      <strong><%= Book.human_attribute_name(:picture) %></strong>
      <%= image_tag(@book.picture_url) if @book.picture.present? %>
    </p>
  </div>
</article>

<%= link_to t('page.edit'), edit_book_path(@book) %> |
<%= link_to t('page.back'), books_path %>

<h1 class="title">Comments</h1>
<div class="columns">
  <div class="column is-two-fifths">
    <%= render 'comments/form', comment: @comment %>
  </div>
  <div class="column">
    <%= render 'comments/index', comments: @comments %>
  </div>
</div>
