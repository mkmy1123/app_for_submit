<p id="notice"><%= notice %></p>

<p><%= link_to I18n.t('page.new'), new_book_path %></p>
<p><%= link_to I18n.t('page.locale'), root_path %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th><%= I18n.t('activerecord.attributes.book.title') %></th>
      <th><%= I18n.t('activerecord.attributes.book.memo') %></th>
      <th><%= I18n.t('activerecord.attributes.book.author') %></th>
      <th><%= I18n.t('activerecord.attributes.book.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.memo %></td>
      <td><%= book.author %></td>
      <td><%= book.picture %></td>
      <td><%= link_to I18n.t('page.show'), book_path(book) %></td>
      <td><%= link_to I18n.t('page.edit'), edit_book_path(book) %></td>
      <td><%= link_to I18n.t('page.destroy'), book, method: :delete, data: { confirm: I18n.t('confirm') } %></td>
    </tr>
    <% end %>
    </tbody>
</table>

<br>
