<nav class="level">
  <div class="level-left">
    <h1 class="title">Books</h1>
  </div>
  <div class="level-right">
    <%= link_to t('page.new'), url_for(new_book_path), class: "button is-dark" %>
  </div>
</nav>

<%= paginate @books %>
<table class="table is-bordered is-fullwidth">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.book.title') %></th>
      <th><%= t('activerecord.attributes.book.memo') %></th>
      <th><%= t('activerecord.attributes.book.author') %></th>
      <th><%= t('activerecord.attributes.book.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.memo %></td>
      <td><%= book.author %></td>
      <td><%= book.picture %></td>
      <td><%= link_to t('page.show'), url_for(book_path(book)), class: "button is-primary" %></td>
      <td><%= link_to t('page.edit'), url_for(edit_book_path(book)), class: "button is-warning" %></td>
      <td><%= link_to t('page.destroy'), book, method: :delete, data: { confirm: t('confirm') }, class: "button is-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
