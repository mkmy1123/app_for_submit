<p id="notice"><%= notice %></p>

<p><%= link_to t('page.new'), url_for(new_book_path) %></p>
<p><%= link_to '日本語', books_path(locale: 'ja') %> / <%= link_to 'English', books_path(locale: 'en') %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.book.title') %></th>
      <th><%= t('activerecord.attributes.book.memo') %></th>
      <th><%= t('activerecord.attributes.book.author') %></th>
      <th><%= t('activerecord.attributes.book.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.memo %></td>
      <td><%= book.author %></td>
      <td><%= book.picture %></td>
      <td><%= link_to t('page.show'), url_for(book_path(book)) %></td>
      <td><%= link_to t('page.edit'), url_for(edit_book_path(book)) %></td>
      <td><%= link_to t('page.destroy'), book, method: :delete, data: { confirm: t('confirm') } %></td>
    </tr>
    <% end %>
    </tbody>
</table>

<br>
