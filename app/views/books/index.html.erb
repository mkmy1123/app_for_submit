<nav class="level">
  <div class="level-left">
    <h1 class="title"><%= Book.model_name.human(count: @books.count) %></h1>
  </div>
  <div class="level-right">
    <%= link_to t('page.new'), new_book_path, class: "button is-dark" %>
  </div>
</nav>

<%= paginate @books %>
<table class="table is-bordered is-fullwidth">
  <thead>
    <tr>
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:memo) %></th>
      <th><%= Book.human_attribute_name(:author) %></th>
      <th><%= Book.human_attribute_name(:picture) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.memo %></td>
      <td><%= book.author %></td>
      <td><%= book.picture %></td>
      <td><%= link_to t('page.show'), book_path(book), class: "button is-primary" %></td>
      <td><%= link_to t('page.edit'), edit_book_path(book), class: "button is-warning" %></td>
      <td><%= link_to t('page.destroy'), book, method: :delete, data: { confirm: t('confirm') }, class: "button is-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
