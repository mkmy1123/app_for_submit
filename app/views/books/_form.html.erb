<%= form_with(model: book, local: true) do |form| %>
<%= render 'errors', obj: book %>

<div class="field">
  <%= form.label :title %>
  <%= form.text_field :title %>
</div>

<div class="field">
  <%= form.label :memo %>
  <%= form.text_area :memo %>
</div>

<div class="field">
  <%= form.label :author %>
  <%= form.text_field :author %>
</div>

<div class="field">
  <%= form.label :picture %>
  <%= form.file_field :picture %>
</div>


<div class="actions">
  <%= form.submit %>
</div>
<% end %>
