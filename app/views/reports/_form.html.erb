  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :learning_day %>
    <%= f.date_field :learning_day %>
  </div>

  <div class="field">
    <%= f.label :feeling_status %>
